  license_heading: { en: "3. Use License", es: "3. Licencia de Uso", de: "3. Nutzungslizenz", fr: "3. Licence d'Utilisation", pt: "3. Licença de Uso", ja: "3. 使用ライセンス", ar: "3. رخصة الاستخدام", hi: "3. उपयोग लाइसेंस" },
  license_text: {
    en: "Permission is granted to temporarily use HobbyCalc for personal, non-commercial purposes. This license shall automatically terminate if you violate any restrictions.",
    es: "Se concede permiso para usar temporalmente HobbyCalc con fines personales y no comerciales. Esta licencia terminará automáticamente si usted viola alguna restricción.",
