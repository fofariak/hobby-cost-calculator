  last_updated: { en: "Last updated: September 2025", es: "Última actualización: Septiembre de 2025", de: "Zuletzt aktualisiert: September 2025", fr: "Dernière mise à jour : Septembre 2025", pt: "Última atualização: Setembro de 2025", ja: "最終更新日：2025年9月", ar: "آخر تحديث: سبتمبر 2025", hi: "अंतिम अपडेट: सितंबर 2025" },
  
