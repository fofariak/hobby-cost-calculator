    // Hobby Search Functionality
    document.getElementById('hobby-search')?.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase().trim();
      const hobbyCards = document.querySelectorAll('.hobby-card');
      
      hobbyCards.forEach(card => {
        const hobbyName = card.dataset.name;
        if (hobbyName && hobbyName.includes(searchTerm)) {
          card.style.display = 'block';
          card.style.opacity = '1';
        } else {
          card.style.display = searchTerm === '' ? 'block' : 'none';
        }
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Add entrance animations for cards
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '0';
          entry.target.style.transform = 'translateY(20px)';
          entry.target.style.transition = 'all 0.6s ease';
          
          setTimeout(() => {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }, index * 100);
          
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe all hobby cards for animations
    document.querySelectorAll('.hobby-card').forEach(card => {
      observer.observe(card);
    });

    // Add loading states for better UX
    document.querySelectorAll('a[href*="/hobbies/"]').forEach(link => {
      link.addEventListener('click', function() {
        this.style.opacity = '0.7';
        this.style.pointerEvents = 'none';
      });
    });

    // Touch-friendly interactions for mobile
    if ('ontouchstart' in window) {
      document.querySelectorAll('.hobby-card').forEach(card => {
        card.addEventListener('touchstart', function() {
          this.style.transform = 'translateY(-2px)';
        });
        card.addEventListener('touchend', function() {
          this.style.transform = '';
        });
      });
    }
  </script>

