---
<Layout 
  title={getText('title', lang)} 
  description={getText('description', lang)}
  lang={lang}
>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
    
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/10 to-purple-600/10"></div>
      <div class="relative max-w-7xl mx-auto px-4 py-16 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
          <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            {getText('hero_title', lang)}
          </span>
          <br />
          <span class="text-3xl md:text-4xl text-gray-700">Instantly & Free</span> [cite: 23]
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8 leading-relaxed">
          {getText('hero_subtitle', lang)}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a 
            href="#calculators" 
            class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            🚀 {getText('start_calculating', lang)}
          </a>
          <a 
            href={`/${lang}/hobbies`}
            class="bg-white text-indigo-600 px-8 py-4 rounded-2xl text-lg font-semibold border-2 border-indigo-600 hover:bg-indigo-50 transition-all duration-300"
          >
            📋 {getText('browse_all', lang)}
          </a>
        </div>
        <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6 max-w-2xl mx-auto">
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600">{hobbies.length}+</div>
            <div class="text-sm text-gray-600">{getText('stats_hobbies', lang)}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600">8</div>
            <div class="text-sm text-gray-600">{getText('stats_languages', lang)}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600">50+</div>
            <div class="text-sm text-gray-600">{getText('stats_currencies', lang)}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-indigo-600">100%</div>
            <div class="text-sm text-gray-600">{getText('stats_free', lang)}</div>
          </div>
        </div>
      </div>
    </section>

    <section id="calculators" class="py-16 bg-gradient-to-br from-gray-50 to-blue-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {getText('popular_hobbies', lang)}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {getText('popular_hobbies_subtitle', lang)}
          </p>
        </div>
        <div class="max-w-md mx-auto mb-12">
          <div class="relative">
            <input 
              type="text" 
              id="hobby-search"
              placeholder={getText('search_hobbies', lang)}
              class="w-full px-4 py-3 pl-12 bg-white rounded-2xl shadow-lg border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
            />
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /> [cite: 47]
              </svg>
            </div>
          </div>
        </div>
        <div id="hobbies-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {featuredHobbies.map((hobby) => {
            const name = hobby.name?.[lang] || hobby.name?.['en'];
            const description = hobby.description?.[lang] || hobby.description?.['en'] || '';
            const beginnerCost = hobby.breakdown?.beginner?.costRangeUSD?.[0];
            if (!name) return null; [cite: 49]
            
            return (
              <div class="hobby-card bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1" data-name={name.toLowerCase()}>
                <a href={`/${lang}/hobbies/${hobby.id}`} class="block">
                  <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                      <span class="text-4xl">{hobby.emoji || '🎨'}</span> [cite: 50]
                      {beginnerCost && (
                        <div class="bg-gradient-to-r from-green-500 to-emerald-500 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-sm">
                          ${beginnerCost}+ [cite: 51]
                        </div>
                      )}
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight">{name}</h3>
                    <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-2">{description}</p> [cite: 52]
                    <div class="flex items-center justify-between">
                      <span class="text-indigo-600 font-semibold text-sm">
                        {getText('calculate_cost', lang)} →
                      </span>
                    </div>
                  </div>
                </a>
              </div>
            );
          })}
        </div>
        <div class="text-center mt-12">
          <a 
            href={`/${lang}/hobbies`}
            class="inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-4 rounded-2xl font-semibold hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            📋 {getText('view_all_hobbies', lang)}
          </a>
        </div>
      </div>
    </section>
    
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="bg-gray-100 rounded-2xl p-8 text-center border-2 border-dashed border-gray-300">
        <p class="text-gray-500 text-sm">Advertisement Space</p>
        <p class="text-gray-400 text-xs mt-1">728x90 or 320x50 responsive ad unit</p> [cite: 58]
      </div>
    </div>
    
