          <!-- Stats -->
          <div class="mt-12 grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 max-w-2xl lg:max-w-4xl mx-auto px-4">
            <div class="text-center">
              <div class="text-2xl md:text-3xl font-bold text-indigo-600">{allHobbies.length}+</div>
