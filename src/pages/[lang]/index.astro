const getText = (key, currentLang) => translations[key]?.[currentLang] || translations[key]?.['en'];

// Get featured hobbies (first 9 for better layout)
const featuredHobbies = hobbies.slice(0, 9);
---

<Layout 
  title={getText('title', lang)} 
  description={getText('description', lang)}
  lang={lang}
>
  <!-- Enhanced Hero Section with Interactive Elements -->
  <section class="hero-gradient min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="floating-shapes"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <!-- Main Hero Content -->
        <div class="animate-fade-in-up">
          <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 leading-tight">
            <span class="gradient-text">HobbyCalc</span>
          </h1>
          <h2 class="text-2xl md:text-3xl font-semibold text-indigo-100 mb-4">
            {getText('hero_title', lang)}
          </h2>
          <p class="text-xl text-indigo-200 mb-8 max-w-2xl mx-auto leading-relaxed">
            {getText('hero_subtitle', lang)}
          </p>
        </div>

        <!-- Interactive Search Bar -->
        <div class="animate-fade-in-up animation-delay-200 mb-8">
          <div class="relative max-w-md mx-auto">
            <input 
              type="text" 
              id="hobby-search"
              placeholder={getText('search_placeholder', lang)}
              class="w-full px-6 py-4 rounded-full text-lg border-0 shadow-2xl focus:ring-4 focus:ring-yellow-300 focus:outline-none transition-all duration-300"
            />
            <button class="absolute right-2 top-2 bottom-2 px-6 bg-gradient-to-r from-yellow-400 to-orange-500 text-white rounded-full hover:shadow-lg transition-all duration-300">
              🔍
            </button>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="animate-fade-in-up animation-delay-400 space-x-4">
          <a 
            href="#popular-hobbies" 
            class="inline-block bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-8 py-4 rounded-full text-lg font-semibold hover:shadow-2xl hover:scale-105 transition-all duration-300"
          >
            {getText('explore_btn', lang)}
          </a>
          <a 
            href="#features" 
            class="inline-block bg-white/10 backdrop-blur-sm text-white px-8 py-4 rounded-full text-lg font-semibold border border-white/20 hover:bg-white/20 transition-all duration-300"
          >
            Learn More
          </a>
        </div>

        <!-- Stats Section -->
        <div class="mt-16 grid grid-cols-3 gap-8 max-w-2xl mx-auto">
          <div class="text-center animate-fade-in-up animation-delay-600">
            <div class="text-3xl font-bold text-yellow-400">50+</div>
            <div class="text-sm text-indigo-200">Hobbies</div>
          </div>
          <div class="text-center animate-fade-in-up animation-delay-700">
            <div class="text-3xl font-bold text-yellow-400">8</div>
            <div class="text-sm text-indigo-200">Languages</div>
          </div>
          <div class="text-center animate-fade-in-up animation-delay-800">
            <div class="text-3xl font-bold text-yellow-400">Free</div>
            <div class="text-sm text-indigo-200">Forever</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-800">
        {getText('features_title', lang)}
      </h2>
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="feature-card text-center p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300">
          <div class="text-5xl mb-4">💰</div>
          <h3 class="text-xl font-semibold mb-4">Accurate Cost Estimates</h3>
          <p class="text-gray-600">Get detailed breakdowns of startup costs from beginner to expert levels</p>
        </div>
        <div class="feature-card text-center p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300">
          <div class="text-5xl mb-4">🌍</div>
          <h3 class="text-xl font-semibold mb-4">Multi-Currency Support</h3>
          <p class="text-gray-600">Real-time currency conversion for accurate local pricing</p>
        </div>
        <div class="feature-card text-center p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300">
          <div class="text-5xl mb-4">🎯</div>
          <h3 class="text-xl font-semibold mb-4">Personalized Recommendations</h3>
          <p class="text-gray-600">Find hobbies that match your budget and interests</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Hobbies Section -->
  <section id="popular-hobbies" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">
          {getText('popular_hobbies', lang)}
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Discover the most popular hobbies and their startup costs
        </p>
      </div>

      <!-- Hobby Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {featuredHobbies.map((hobby, index) => {
          const name = hobby.name?.[lang] || hobby.name?.['en'];
          const description = hobby.description?.[lang] || hobby.description?.['en'] || '';
          const beginnerCost = hobby.breakdown?.beginner?.costRangeUSD?.[0];
          
          if (!name) return null;
          
          return (
            <div class={`hobby-card animate-fade-in-up animation-delay-${(index + 1) * 100}`}>
              <a 
                href={`/${lang}/hobbies/${hobby.id}`} 
                class="block bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group"
              >
                <div class="p-6">
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-4xl group-hover:scale-110 transition-transform duration-300">
                      {hobby.emoji || '🎨'}
                    </span>
                    {beginnerCost && (
                      <span class="px-3 py-1 bg-gradient-to-r from-green-400 to-blue-500 text-white text-sm font-semibold rounded-full">
                        From ${beginnerCost}
                      </span>
                    )}
                  </div>
                  <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-indigo-600 transition-colors">
                    {name}
                  </h3>
                  <p class="text-gray-600 text-sm leading-relaxed">
                    {description}
                  </p>
                </div>
                <div class="px-6 pb-6">
                  <div class="flex items-center text-indigo-600 font-medium group-hover:text-indigo-800 transition-colors">
                    Calculate Cost 
                    <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </div>
          );
        })}
      </div>

      <!-- View All Button -->
      <div class="text-center mt-12">
        <a 
          href={`/${lang}/hobbies`}
          class="inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:shadow-2xl hover:scale-105 transition-all duration-300"
        >
          View All {hobbies.length} Hobbies →
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter/CTA Section -->
  <section class="py-20 bg-gradient-to-r from-indigo-600 to-purple-600">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-4">Ready to Start Your Hobby Journey?</h2>
      <p class="text-xl text-indigo-100 mb-8 max-w-2xl mx-auto">
        Get personalized hobby recommendations and cost estimates tailored to your budget
      </p>
      <a 
        href={`/${lang}/calculator`}
        class="inline-block bg-yellow-400 text-indigo-900 px-8 py-4 rounded-full text-lg font-bold hover:bg-yellow-300 hover:shadow-2xl transition-all duration-300"
      >
        Start Calculating Now
      </a>
    </div>
  </section>
</Layout>

<style>
/* Enhanced CSS for modern, interactive design */
.hero-gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.gradient-text {
  background: linear-gradient(135deg, #fbbf24, #f97316);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.floating-shapes {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.floating-shapes::before,
.floating-shapes::after {
  content: '';
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.floating-shapes::before {
  width: 200px;
  height: 200px;
  top: 20%;
  left: 10%;
  animation-delay: -2s;
}

.floating-shapes::after {
  width: 150px;
  height: 150px;
  bottom: 20%;
  right: 10%;
  animation-delay: -4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.animate-fade-in-up {
  animation: fadeInUp 0.8s ease-out forwards;
  opacity: 0;
  transform: translateY(30px);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animation-delay-100 { animation-delay: 0.1s; }
.animation-delay-200 { animation-delay: 0.2s; }
.animation-delay-300 { animation-delay: 0.3s; }
.animation-delay-400 { animation-delay: 0.4s; }
.animation-delay-500 { animation-delay: 0.5s; }
.animation-delay-600 { animation-delay: 0.6s; }
.animation-delay-700 { animation-delay: 0.7s; }
.animation-delay-800 { animation-delay: 0.8s; }

.feature-card:hover {
  transform: translateY(-5px);
}

.hobby-card:hover {
  transform: translateY(-5px);
}

/* Search functionality */
#hobby-search {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
}

/* Responsive improvements */
@media (max-width: 768px) {
  .text-6xl { font-size: 3rem; }
  .text-7xl { font-size: 3.5rem; }
  .grid { gap: 1rem; }
}

/* Performance optimizations */
.hero-gradient::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  will-change: transform;
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
  .animate-fade-in-up,
  .floating-shapes::before,
  .floating-shapes::after {
    animation: none;
  }
  
  .animate-fade-in-up {
    opacity: 1;
    transform: none;
  }
}

/* Focus states for better accessibility */
a:focus,
button:focus,
input:focus {
  outline: 3px solid #fbbf24;
  outline-offset: 2px;
}
</style>

<script>
// Interactive search functionality
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('hobby-search');
  
  if (searchInput) {
    searchInput.addEventListener('input', function(e) {
      const query = e.target.value.toLowerCase();
      // Add debounced search functionality here
      // This could filter visible hobby cards or redirect to search results
    });

    // Add enter key functionality
    searchInput.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        const query = e.target.value;
        if (query.trim()) {
          // Redirect to search results or filter page
          window.location.href = `/${document.documentElement.lang}/search?q=${encodeURIComponent(query)}`;
        }
      }
    });
  }

  // Add intersection observer for animation triggers
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver(function(entries) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fade-in-up');
      }
    });
  }, observerOptions);

  // Observe all hobby cards
  document.querySelectorAll('.hobby-card').forEach(card => {
    observer.observe(card);
  });

  // Add smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
});
</script>

