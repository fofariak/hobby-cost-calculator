            <p class="text-gray-600 leading-relaxed">{getText('step3_desc', lang)}</p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{getText('why_choose', lang)}</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">{getText('why_choose_subtitle', lang)}</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
