---
import Layout from '../../layouts/Layout.astro';
import uiLabels from '../../data/uiLabels.json';

export function getStaticPaths() {
  const languages = ['en', 'es', 'de', 'fr', 'pt', 'ja', 'ar', 'hi'];
  return languages.map(lang => ({ params: { lang } }));
}

