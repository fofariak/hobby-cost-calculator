  heading: { en: "Privacy Policy", es: "Política de Privacidad", de: "Datenschutzrichtlinie", fr: "Politique de Confidentialité", pt: "Política de Privacidade", ja: "プライバシーポリシー", ar: "سياسة الخصوصية", hi: "गोपनीयता नीति" },
  last_updated: { en: "Last updated: September 2025", es: "Última actualización: Septiembre de 2025", de: "Zuletzt aktualisiert: September 2025", fr: "Dernière mise à jour : Septembre 2025", pt: "Última atualização: Setembro de 2025", ja: "最終更新日：2025年9月", ar: "آخر تحديث: سبتمبر 2025", hi: "अंतिम अपडेट: सितंबर 2025" },
  
  collect_heading: { en: "1. Information We Collect", es: "1. Información que Recopilamos", de: "1. Informationen, die wir sammeln", fr: "1. Informations que nous collectons", pt: "1. Informações que Coletamos", ja: "1. 収集する情報", ar: "1. المعلومات التي نجمعها", hi: "1. हम जो जानकारी एकत्र करते हैं" },
  collect_text: {
    en: "HobbyCalc collects minimal information to provide our services:",
    es: "HobbyCalc recopila información mínima para proporcionar nuestros servicios:",
    de: "HobbyCalc sammelt minimale Informationen, um unsere Dienste bereitzustellen:",
    fr: "HobbyCalc collecte des informations minimales pour fournir nos services :",
    pt: "O HobbyCalc coleta informações mínimas para fornecer nossos serviços:",
    ja: "HobbyCalcは、サービスを提供するために最小限の情報を収集します：",
    ar: "يجمع HobbyCalc الحد الأدنى من المعلومات لتقديم خدماتنا:",
    hi: "हॉबीकैल्क हमारी सेवाएं प्रदान करने के लिए न्यूनतम जानकारी एकत्र करता है:"
  },
  collect_item_1: { en: "Usage data (pages visited, time spent on site)", es: "Datos de uso (páginas visitadas, tiempo en el sitio)", de: "Nutzungsdaten (besuchte Seiten, Verweildauer auf der Website)", fr: "Données d'utilisation (pages visitées, temps passé sur le site)", pt: "Dados de uso (páginas visitadas, tempo gasto no site)", ja: "使用データ（訪問したページ、サイト滞在時間）", ar: "بيانات الاستخدام (الصفحات التي تمت زيارتها، الوقت المستغرق في الموقع)", hi: "उपयोग डेटा (देखे गए पृष्ठ, साइट पर बिताया गया समय)" },
  collect_item_2: { en: "Device information (browser type, device type)", es: "Información del dispositivo (tipo de navegador, tipo de dispositivo)", de: "Geräteinformationen (Browsertyp, Gerätetyp)", fr: "Informations sur l'appareil (type de navigateur, type d'appareil)", pt: "Informações do dispositivo (tipo de navegador, tipo de dispositivo)", ja: "デバイス情報（ブラウザの種類、デバイスの種類）", ar: "معلومات الجهاز (نوع المتصفح، نوع الجهاز)", hi: "डिवाइस जानकारी (ब्राउज़र प्रकार, डिवाइस प्रकार)" },
  collect_item_3: { en: "Currency preferences for cost calculations", es: "Preferencias de moneda para los cálculos de costos", de: "Währungspräferenzen für Kostenberechnungen", fr: "Préférences de devise pour les calculs de coûts", pt: "Preferências de moeda para cálculos de custos", ja: "費用計算のための通貨設定", ar: "تفضيلات العملة لحسابات التكلفة", hi: "लागत गणना के लिए मुद्रा वरीयताएँ" },
  
  usage_heading: { en: "2. How We Use Information", es: "2. Cómo Usamos la Información", de: "2. Wie wir Informationen verwenden", fr: "2. Comment nous utilisons les informations", pt: "2. Como Usamos as Informações", ja: "2. 情報の利用方法", ar: "2. كيف نستخدم المعلومات", hi: "2. हम जानकारी का उपयोग कैसे करते हैं" },
  usage_text: {
    en: "We use collected information to improve our website, analyze traffic, and display relevant advertisements.",
    es: "Utilizamos la información recopilada para mejorar nuestro sitio web, analizar el tráfico y mostrar anuncios relevantes.",
    de: "Wir verwenden die gesammelten Informationen, um unsere Website zu verbessern, den Verkehr zu analysieren und relevante Werbung anzuzeigen.",
    fr: "Nous utilisons les informations collectées pour améliorer notre site Web, analyser le trafic et afficher des publicités pertinentes.",
    pt: "Usamos as informações coletadas para melhorar nosso site, analisar o tráfego e exibir anúncios relevantes.",
    ja: "収集した情報は、ウェブサイトの改善、トラフィックの分析、関連広告の表示に使用します。",
    ar: "نستخدم المعلومات التي تم جمعها لتحسين موقعنا، وتحليل حركة المرور، وعرض الإعلانات ذات الصلة.",
    hi: "हम एकत्रित जानकारी का उपयोग हमारी वेबसाइट को बेहतर बनाने, ट्रैफिक का विश्लेषण करने और प्रासंगिक विज्ञापन प्रदर्शित करने के लिए करते हैं।"
  },
  
  cookies_heading: { en: "3. Cookies and Tracking", es: "3. Cookies y Seguimiento", de: "3. Cookies und Tracking", fr: "3. Cookies et Suivi", pt: "3. Cookies e Rastreamento", ja: "3. クッキーとトラッキング", ar: "3. ملفات تعريف الارتباط والتتبع", hi: "3. कुकीज़ और ट्रैकिंग" },
  cookies_text: {
    en: "We use cookies and similar technologies to remember your preferences (like currency) and to work with our advertising and analytics partners.",
    es: "Utilizamos cookies y tecnologías similares para recordar sus preferences (como la moneda) y para trabajar con nuestros socios de publicidad y análisis.",
    de: "Wir verwenden Cookies und ähnliche Technologien, um Ihre Präferenzen (wie die Währung) zu speichern und mit unseren Werbe- und Analysepartnern zusammenzuarbeiten.",
    fr: "Nous utilisons des cookies et des technologies similaires pour mémoriser vos préférences (comme la devise) et pour travailler avec nos partenaires publicitaires et analytiques.",
    pt: "Usamos cookies e tecnologias semelhantes para lembrar suas preferências (como moeda) e para trabalhar com nossos parceiros de publicidade e análise.",
    ja: "当社は、お客様の好み（通貨など）を記憶し、広告および分析パートナーと連携するために、クッキーおよび類似の技術を使用します。",
    ar: "نحن نستخدم ملفات تعريف الارتباط والتقنيات المماثلة لتذكر تفضيلاتك (مثل العملة) وللعمل مع شركائنا في الإعلانات والتحليلات.",
    hi: "हम आपकी प्राथमिकताओं (जैसे मुद्रा) को याद रखने और हमारे विज्ञापन और एनालिटिक्स भागीदारों के साथ काम करने के लिए कुकीज़ और इसी तरह की तकनीकों का उपयोग करते हैं।"
  },
  
  contact_heading: { en: "4. Contact Us", es: "4. Contáctanos", de: "4. Kontaktieren Sie uns", fr: "4. Contactez-nous", pt: "4. Fale Conosco", ja: "4. お問い合わせ", ar: "4. اتصل بنا", hi: "4. हमसे संपर्क करें" },
  contact_text: {
    en: "If you have questions about this Privacy Policy, contact us at: privacy@hobbycalc.com.",
    es: "Si tiene preguntas sobre esta Política de Privacidad, contáctenos en: privacy@hobbycalc.com.",
    de: "Wenn Sie Fragen zu dieser Datenschutzrichtlinie haben, kontaktieren Sie uns unter: privacy@hobbycalc.com.",
    fr: "Si vous avez des questions sur cette Politique de Confidentialité, contactez-nous à : privacy@hobbycalc.com.",
    pt: "Se você tiver dúvidas sobre esta Política de Privacidade, entre em contato conosco em: privacy@hobbycalc.com.",
    ja: "このプライバシーポリシーに関するご質問は、privacy@hobbycalc.comまでお問い合わせください。",
    ar: "إذا كانت لديك أسئلة حول سياسة الخصوصية هذه، فاتصل بنا على: privacy@hobbycalc.com.",
    hi: "यदि इस गोपनीयता नीति के बारे में आपके कोई प्रश्न हैं, तो हमसे यहां संपर्क करें: privacy@hobbycalc.com।"
  }
};

const getText = (key) => pageContent[key]?.[lang] || pageContent[key]?.['en'];
---

<Layout title={getText('title')} lang={lang}>
  <div class="bg-white">
    <div class="container mx-auto px-6 py-12 max-w-4xl">
      <h1 class="text-4xl font-bold mb-4 text-gray-800">{getText('heading')}</h1>
      <p class="text-gray-500 mb-8 text-sm">{getText('last_updated')}</p>
      
      <div class="prose prose-lg max-w-none space-y-6">
        <section>
          <h2 class="text-2xl font-semibold mb-4 text-indigo-600">{getText('collect_heading')}</h2>
          <p class="text-gray-700 leading-relaxed">{getText('collect_text')}</p>
          <ul class="list-disc pl-6 text-gray-700">
            <li>{getText('collect_item_1')}</li>
            <li>{getText('collect_item_2')}</li>
            <li>{getText('collect_item_3')}</li>
          </ul>
        </section>

        <section>
          <h2 class="text-2xl font-semibold mb-4 text-indigo-600">{getText('usage_heading')}</h2>
          <p class="text-gray-700 leading-relaxed">{getText('usage_text')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-semibold mb-4 text-indigo-600">{getText('cookies_heading')}</h2>
          <p class="text-gray-700 leading-relaxed">{getText('cookies_text')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-semibold mb-4 text-indigo-600">{getText('contact_heading')}</h2>
          <p class="text-gray-700 leading-relaxed">
            {getText('contact_text').replace('privacy@hobbycalc.com', '')}
            <a href="mailto:privacy@hobbycalc.com" class="text-indigo-600 hover:text-indigo-800">privacy@hobbycalc.com</a>
          </p>
        </section>
      </div>
    </div>

    <footer class="bg-gray-900 text-gray-300 py-12 mt-12">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
          <div class="col-span-2">
            <h3 class="text-xl font-bold text-white mb-4">🎨 HobbyCalc</h3>
            <p class="text-gray-400 mb-4">{ui.calculateTrueCost}</p>
          </div>
          <div>
            <h4 class="font-semibold text-white mb-3">{ui.quickLinks}</h4>
            <div class="space-y-2 text-sm">
              <a href={`/${lang}/`} class="block hover:text-white transition-colors">{ui.home}</a>
              <a href={`/${lang}/hobbies`} class="block hover:text-white transition-colors">{ui.allHobbies}</a>
            </div>
          </div>
          <div>
            <h4 class="font-semibold text-white mb-3">{ui.legal}</h4>
            <div class="space-y-2 text-sm">
              <a href={`/${lang}/privacy`} class="block hover:text-white transition-colors">{ui.privacyPolicy}</a>
              <a href={`/${lang}/terms`} class="block hover:text-white transition-colors">{ui.termsOfService}</a>
              <a href={`/${lang}/disclaimer`} class="block hover:text-white transition-colors">{ui.disclaimer}</a>
            </div>
          </div>
          <div>
            <h4 class="font-semibold text-white mb-3">{ui.contact}</h4>
            <div class="space-y-2 text-sm">
              <a href={`/${lang}/contact`} class="block hover:text-white transition-colors">{ui.getInTouch}</a>
              <a href={`/${lang}/about`} class="block hover:text-white transition-colors">{ui.aboutUs}</a>
            </div>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm text-gray-400">
          © {new Date().getFullYear()} HobbyCalc. {ui.allRightsReserved}.
        </div>
      </div>
    </footer>
  </div>
</Layout>
